<li id="section-0" class="first-section-li section main clearfix mb-25 mb-4 m-b-1" role="region" aria-label="{{{generalsectiontitle}}}">
    <span class="hidden sectionname">{{{generalsectiontitle}}}</span>
    <div class="font-size-14 summary">{{{ generalsectionsummary }}}</div>
    <div class="content">
        <div class="section_availability badge badge-pill badge-info mb-10"></div>
            <ul class="section first-section img-text row p-0 py-10 py-2 p-y-1 d-flex justify-content-start text-center">
                {{#activities}}
                    <li class="activity first-section-activity {{{modulename}}} modtype_{{{modulename}}} col-6 col-sm-6 col-md-4 col-lg-3 justify-content-center p-0 pt-10 pt-3" id="module-1">
                        <div>
                            {{#editing}}
                                {{{leftside}}}
                            {{/editing}}
                            <div>
                                <div class="activityinstance p-0 d-inline-block">
                                    {{{title}}}
                                </div>
                                <div class="actions">
                                    {{{completion}}}
                                </div>
                                {{{availstatus}}}
                            </div>
                        </div>
                    </li>
                {{/activities}}
            </ul>
    </div>
</li>

<!-- Info bar (dates, teacher, progress and resume button) -->
<li id="section-info" class="first-section-li section main clearfix mb-25 mb-4 m-b-2" role="region" aria-label="{{{generalsectiontitle}}}">
    <div class="container">
        <div class="row">
            <!-- dates -->
            <div class="col-2 text-center mt-4">
                 <p class="text-right labeldates">{{#str}}startdate, format_remuiformat{{/str}}<br/>
                <span class="startdate">{{{startdate}}}</span></p>
            </div>
            <div class="col-2 text-center mt-4 separator">
                 <p class="text-left labeldates">{{#str}}enddate, format_remuiformat{{/str}}<br/>
                 <span class="enddate">{{{enddate}}}</span></p>
            </div>
            <!-- Teachers -->
            <div class="col-2 text-center teachers">
                <div class="text-white mb-10 m-b-1 d-flex mt-4">
                    {{#teachers}}
                        {{{teacherimg}}}
                    {{/teachers}}
                </div>
            </div>
            <!-- Progress circle -->
            <div class="col-2 text-right mt-4">
                <p class = "labelprogress">{{#str}}studentprogress, format_remuiformat{{/str}}</p>
            </div>
            <div class="col-2">
                <div class="wrapper">
                    <div class="c100 p{{{percentage}}} orange">
                        <span>{{{percentage}}}%</span>
                        <div class="slice">
                            <div class="bar"></div>
                            <div class="fill"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Resume button -->
            <div class="col-2 text-center mt-4 resume">
                {{#resumeactivityurl}}
                <a class="btn btn-secondary btn-block " href="{{{ resumeactivityurl }}}" role="button">{{#str}} resumetoactivity, format_remuiformat{{/str}}</a>
                {{/resumeactivityurl}}
            </div>            
        </div>
    </div>
</li>